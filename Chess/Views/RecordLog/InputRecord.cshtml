            //    param = 'recordLogStr=' + value;
            //var url = ['/RecordLog/GetRecordLog', param].join('?');
            var str = $(".weui-textarea").val();
            var arry = new Array();
            debugger
            if (str.indexOf("亲朋馆") == -1) {
                arry = str.split(":");
                var clubId = 0;
                var roomIdStr = arry[1]; //roomid字符
                var i = roomIdStr.indexOf("\n");  //空格出现位置
                var roomId = roomIdStr.substring(0, i);
            }
            else {
                arry = str.split(":");
                var clubId = parseInt(arry[1]);
                var roomIdStr = arry[2]; //roomid字符
                var i = roomIdStr.indexOf("\n");  //空格出现位置
                var roomId = roomIdStr.substring(0, i);
            }
            var url = '/RecordLog/GetRecordLog?clubId=' + clubId + '&roomId=' + roomId + '';
            window.location.href = url;
        }
        function uploadImg() {
            var url = '/RecordLog/GetRecordLog?';
            window.location.href = url;
        }
    </script>
